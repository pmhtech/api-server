<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
 version="3.1">
 	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			
			classpath:pmhtech-data.xml
			classpath:pmhtech-data-mybatis.xml
			classpath:pmhtech-scheduler.xml
			classpath:pmhtech-restful.xml
			classpath:pmhtech-views.xml
		</param-value>
	</context-param>
	
	<context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.xml</param-value>
    </context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>moniter</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:pmhtech-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<filter>
    	<filter-name>httpPutFormContentFilter</filter-name>
    	<filter-class>org.springframework.web.filter.HttpPutFormContentFilter</filter-class>
	</filter>
	<filter>
    <filter-name>bufferFilter</filter-name>
    <filter-class>org.springframework.web.filter.ShallowEtagHeaderFilter</filter-class>
</filter>
	
	<filter-mapping>
    	<filter-name>httpPutFormContentFilter</filter-name>
    	<servlet-name>moniter</servlet-name>
	</filter-mapping>
	<filter-mapping>
    	<filter-name>bufferFilter</filter-name>
    	<servlet-name>moniter</servlet-name>
	</filter-mapping>
	
	<servlet-mapping>
		<servlet-name>moniter</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>